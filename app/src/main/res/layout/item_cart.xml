<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvNamaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Item"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"/>

    <TextView
        android:id="@+id/tvHargaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/black"
        android:layout_below="@id/tvNamaItem"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaItem"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvHargaPerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10/ kg"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvJumlahItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:text="x2"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHapusItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNamaItem"
        android:layout_alignParentEnd="true"
        android:text="Hapus"
        android:textColor="@color/red"
        android:fontFamily="@font/montserrat_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvHapusItem"
        android:background="@color/green" />

</RelativeLayout>